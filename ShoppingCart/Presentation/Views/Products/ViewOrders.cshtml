@model IEnumerable<ShoppingCart.Application.ViewModels.OrderDetailsViewModel>

@{
    ViewData["Title"] = "ViewOrders";
}

@if (Model.Count() == 0)
{
    <h1>No Orders</h1>
}
else
{
<h2 class="aboutus-title">My Orders</h2>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-image">
                <thead>
                    <tr>
                        <!--<th scope="col">Product</th>-->
                        <th scope="col">Product Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Date</th>
                        <th scope="col">Recipe</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <!--
    <td class="w-25">
        <img src="" class="img-fluid img-thumbnail" alt="">
    </td>-->
                        <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                        <td>€@Html.DisplayFor(modelItem => item.Product.Price)</td>
                        <td>x @Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>Ordered on: @Html.DisplayFor(modelItem => item.DateCreated)</td>
                        @if (item.Product.Price == 102)
                        {
                            <td><a asp-controller="Products" asp-action="WeeklyMealPlan" class="btn btn-secondary">View Recipe</a></td>

                        }
                        else
                        {
                            <td><a asp-controller="Products" asp-action="SingleMealPlan" class="btn btn-secondary">View Recipe</a></td>

                        }
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}
